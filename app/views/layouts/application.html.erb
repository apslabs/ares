<!DOCTYPE html>
<html>
<head>
  <title><%= title%></title>

  <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override", "apslabs-ie.css" ,"apslabs.css" %>

  <%= stylesheet_link_tag "jquery-ui.css", :media => "screen" %>
  <%= stylesheet_link_tag "base.css", :media => "screen" %>
  <%= stylesheet_link_tag "jquery.tipsy.css", :media => "screen" %>
  <%= stylesheet_link_tag "activo/activo.css", :media => "screen", :id => "current-theme" %>
  <%= stylesheet_link_tag "application.css", :media => "screen" %>

  <%= javascript_include_tag :defaults, :cocoon %> 

  <%= yield(:head) %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <%= render 'layouts/header' %>
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <%= render 'layouts/footer' %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>