<% @recibos.each do |recibo| %>
  <tr>
    <td><%= recibo.cliente.razonsocial %></td>
    <td><%= recibo.fecha %></td>
    <td><%= recibo.importe %></td>
    <td><%= recibo.numero %></td>
    <td><%= link_to 'Show', recibo %></td>
    <td><%= link_to 'Edit', edit_recibo_path(recibo) %></td>
    <td><%= link_to 'Destroy', recibo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

