<h1>Listado de recibos</h1>

<table>
  <tr>
    <th>Cliente</th>
    <th>Fecha</th>
    <th>Importe</th>
    <th>Numero</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recibos.each do |recibo| %>
  <tr>
    <td><%= recibo.cliente.razonsocial %></td>
    <td><%= recibo.fecha %></td>
    <td><%= recibo.importe %></td>
    <td><%= recibo.numero %></td>
    <td><%= link_to 'Ver', recibo %></td>
    <td><%= link_to 'Editar', edit_recibo_path(recibo) %></td>
    <td><%= link_to 'Borrar', recibo, :confirm => 'Esta ud. seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

