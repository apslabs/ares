<%= semantic_form_for(@cliente) do |f| %>
<%= f.semantic_errors %>

<%= f.inputs do %>
  <%= f.input :codigo %>
  <%= f.input :razonsocial %>
  <%= f.input :cuit, :as => :numeric , :input_html => { :size => 11, :style => "text-align:left;" }%>
  <%= f.input :condicioniva, :label => true, :as => :select, :collection => Condicioniva.all.map{|c| [c.detalle, c.id]}, :include_blank => false %>
  <%= f.input :telefono %>
  <%= f.input :direccion %>
  <%= f.input :contacto %>
<% end %> 

<%= f.buttons %>
<% end %>
