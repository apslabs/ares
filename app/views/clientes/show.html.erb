  <tr>
    <td><%= cpbte.numero %></td>
    <td><%= cpbte.fecha %></td>
    <td><%= cpbte.importe %></td>
  </tr>
	<% cpbte.facturanotacreditos.each do |cpbteafectado| %>
		<tr>
		<td>factura -------></td>
		<td><%= cpbteafectado.fecha %></td>
		<td><%= cpbteafectado.importe %></td>
  		<td><%= cpbteafectado.factura.numero %></td>
