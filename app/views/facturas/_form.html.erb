<%= semantic_form_for @factura do |f| %>
 <%= f.semantic_errors %>

<%= f.inputs do %>
  <%= f.input :fecha , :as => :datepicker %>
  <%= f.input :cliente, :label => true, :as => :select, :collection => Cliente.all.map{|c| [c.razonsocial, c.id]}, :include_blank => false %>
  <%= f.input :numero , :as => :numeric, :input_html => { :size => 10, :style => "text-align:right;" } %>
  <%= f.input :fechavto , :as => :datepicker %>

<table>
	<tr>
		<th>
			descripcion
		</th>
		<th>
			cantidad
		</th>
		<th>
			precio unitario
		</th>
		<th>
			tasa IVA
		</th>
	</tr>
</table>

  <%= f.semantic_fields_for :facturadetalles do |fd|%>    
     <%= render 'facturadetalle_fields', :f => fd %> 
  <% end %>
	<div class="links">
	<%= link_to_add_association 'agrega detalle', f, :facturadetalles, 'data-association-insertion-position' => :before %>
	</div>

<% end %>
<%= f.buttons %>
<% end %>